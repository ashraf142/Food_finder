
 <% include ./partials/admin_header %>
<div id="page-wrapper" style="margin-left: -1px;" >
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Dashboard</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <!-- /.panel -->
                        <div class="panel panel-default">
                            
                            <div class="panel-body">
                                <div class="row">
                                     <div class="col-lg-12" >
                                        <div class="table-responsive">
                                            <h3 style="text-align: center; color: blue;">User Lists</h3> <br>
                                            <table class="table table-bordered table-hover table-striped" style="text-align: center;">
                                                <thead>
                                                <tr >
                                                    <th style="text-align: center;">Sl No</th>
                                                    <th style="text-align: center;">Username</th>
                                                    <th style="text-align: center;">Full name</th>
                                                    <th style="text-align: center;">Role</th>
                                                    <th style="text-align: center;">Action</th>
                                                </tr>
                                                </thead>
                                               <tbody>

                                                    <%  for ( var i = 0; i < users.length; i ++ ) { %>

                                                    <tr>
                                                        <td><%- i %></td>
                                                        <td><%- users[i].username %></td>
                                                        <td><%- users[i].first_name %> <%- users[i].last_name %></td>
                                                        <td><%- users[i].user_role %></td>
                                                        <td>
                                                            <form action="/deleteUser/<%- users[i].id %>?_method=DELETE" method="post" onclick="return confirm('Are you sure you want to delete this item?');">
                                                                <button type="submit" class="btn btn-default btn-danger btn-xs" >Ban</button>
                                                            </form>
                                                        </td>
                                                    </tr>                                          
                                                    
                                                    <% } %>

                                                </tbody>
                                            </table>
                                        </div>
                                     </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                   
                    </div>
                    <!-- /.col-lg-4 -->
                </div>
                <!-- /.row -->
            </div>
            </div>
        </div>

    </div>
</div>

<% include ./partials/admin_footer %>