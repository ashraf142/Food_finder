
<% include ./partials/admin_header %>

    <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Update Restaurant Information:</h4>
                            </div>
                            <div class="content">
                                <form action = "/updateRestaurant" method = "post" >
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Restaurant Name</label>
                                                <input type="text" name = "rname"  class="form-control" value = "<%- data.rname %>">
                                            </div>
                                        </div>
           
                                        <div class="col-md-6" >
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Restaurant Type</label>
                                                <input type="text" name = "rtype" class="form-control" value = "<%- data.rtype %>">
                                            </div>
                                        </div>

                                         <div class="col-md-6" style="margin-left:10px;margin-right:-20px;">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Opening Time</label>
                                                <input type="text" name = "op_time" class="form-control" value = "<%- data.op_time %>" >
                                            </div>
                                        </div>


                                        <div class="col-md-6" name = "cl_time" style="margin-left:10px;margin-right:-10px;">
                                            <div class="form-group">
                                                <label>Closing Time</label>
                                                <input type="text" class="form-control" value = "<%- data.cl_time %>" >
                                            </div>
                                        </div>

                                        <div class="header">
                                         <h4 class="title">Restaurant Location:</h4>
                                        </div>
                                        <br>

                                         <div class="col-md-6" style="margin-left:10px;margin-right:-20px;">
                                            <div class="form-group">
                                                <label>Road No:</label>
                                                <input type="text" name = "road_no" class="form-control" value = "<%- data.road_no %>" >
                                            </div>
                                        </div>

                                        <div class="col-md-6" style="margin-left:10px;">
                                            <div class="form-group">
                                                <label>House No:</label>
                                                <input type="text" name = "house_no" class="form-control" value = "<%- data.house_no %>" >
                                            </div>
                                        </div>
                                        <div class="col-md-6" style="margin-left:10px;margin-right:-20px;">
                                            <div class="form-group">
                                                <label>Block No:</label>
                                                <input type="text" name = "block_no" class="form-control" value = "<%- data.block_no %>" >
                                            </div>
                                        </div>
                                        <div class="col-md-6" style="margin-left:10px;margin-right:-20px;">
                                            <div class="form-group">
                                                <label>Thana:</label>
                                                <input type="text" name = "thana" class="form-control" value = "<%- data.thana %>" >
                                            </div>
                                        </div>
                                        <div class="col-md-6" style="margin-left:10px;margin-right:-20px;">
                                            <div class="form-group">
                                                <label>District:</label>
                                                <input type="text" name = "district" class="form-control" value = "<%- data.district %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6" style="margin-left:10px;margin-right:-20px;">
                                            <div class="form-group">
                                                <label>Zip: </label>
                                                <input type="text" name = "zip" class="form-control" value = "<%- data.zip %>">
                                            </div>
                                        </div>
                                    </div>


                                    <button type="submit" class="btn btn-info btn-fill pull-right" style="margin-left:15px;">Update</button>
                                    <div class="clearfix"></div>

                                </form>
                            </div>
                        </div>
                       
                    </div>
                  

                </div>
            </div>
        </div>

 <% include ./partials/admin_footer %>