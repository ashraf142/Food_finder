
<% include ./partials/admin_header %>

<div id="page-wrapper" style="margin-left: -1px;" >
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Dashboard</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                
                <div class="row">
                    <div class="col-lg-8">
                        <!-- /.panel -->
                        <div class="panel panel-default">
                            
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12" >
                                        <h3 style="text-align: center; color: blue;">New order Lists</h3> <br>
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-hover table-striped" style="text-align: center;">
                                                <thead >
                                                <tr >
                                                    <th style="text-align: center;">Sl No</th>
                                                    <th style="text-align: center;">Customer Name</th>
                                                    <th style="text-align: center;">Food Name</th>
                                                    <th style="text-align: center;">Price</th>
                                                    <th style="text-align: center;">Area</th>
                                                    <th style="text-align: center;">Status</th>
                                                    <th style="text-align: center;">##</th>
                                                </tr>
                                                </thead>
                                                <tbody>

                                                <% for ( var i = 0; i < orders.length; i ++ ) { %>
                                                    <tr>
                                                        <td><%- i %></td>
                                                        <td><%- orders[i].username %></td>
                                                        <td><%- orders[i].food_name %></td>
                                                        <td><%- orders[i].price %></td>
                                                        <td><%- orders[i].thana %></td>
                                                        <td><%- orders[i].status %></td>
                                                        <td><button style="color: red;">Done</button></td>
                                                    </tr>    
                                                <% } %>
                                                
                                               
                                                </tbody>
                                            </table>
                                        </div>
                                     </div>
                                     <div class="col-lg-12" >
                                        <div class="table-responsive">
                                            <h3 style="text-align: center; color: blue;">Exting Items</h3> <br>
                                            <table class="table table-bordered table-hover table-striped" style="text-align: center;">
                                                <thead>
                                                <tr >
                                                    <th style="text-align: center;">Sl No</th>
                                                    <th style="text-align: center;">Name</th>
                                                    <th style="text-align: center;">Type</th>
                                                    <th style="text-align: center;">Price</th>
                                                    
                                                    <th style="text-align: center;">Action</th> 
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    
                                                    <% for ( var i = 0; i < foods.length; i ++ ) { %>
                                                    
                                                    <tr>
                                                        <td><%- foods[i].fId %></td>
                                                        <td><%- foods[i].food_name %></td>
                                                        <td><%- foods[i].food_type %></td>
                                                        <td><%- foods[i].price %></td>
                                                        <td>
                                                        
                                                            <div>
                                                                <form action="/delete_food/<%= foods[i].fId%>/<%= foods[i].rId %>?_method=DELETE" method="post" onclick="return confirm('Are you sure you want to delete this item?');">
                                                                    <button type="submit" class="btn btn-default btn-danger btn-xs" >Remove</button>
                                                                </form>
                                                            </div>

                                                        </td>
                                                    </tr>

                                                    <% } %>

                                                </tbody>
                                            </table>
                                        </div>
                                     </div>
                                    
    
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
            
                        <div class="card card-user">
                            <div class="image">
                                <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..."/>
                            </div>
                            <div class="content">
                                <div class="author">
                                     <a href="#">
                                    <img class="avatar border-gray" src="https://cdn.icon-icons.com/icons2/582/PNG/512/boy_icon-icons.com_55048.png" alt="..."/>

                                      <h4 class="title">
                                          <%- userInfo.username %>
                                          <br />
                                         <small> Restaurant Name: <%- res_name %></small>
                                      </h4>
                                    </a>
                                </div>
                               
                            </div>
                            <hr>
                            <div class="text-center">
                                <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                                <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                                <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>

                            </div>
                        </div>

                         <div class="chat-panel panel panel-default">
                            <div class="panel-heading" style="background-color: orange;">
                            
                            </div>

                            <div class = "col-md-12">
                                <% if (hasRestaurant) { %>
                                    <h4> Insert food Items in your restaurant <a href="/add_food" style="color: orange;">Click Here</a> </h4>
                                <% } %>
                                <br>
                                <br>
                            </div>
                            <br>
                            <div class = "col-md-12">
                                <% if ( hasRestaurant == false ) { %>
                                    <h4> Add your restaurant informations <a href="addRestaurantinfo" style="color: orange;"> Click Here </a> </h4>
                                <% } %>
                                <% if ( hasRestaurant == true ) { %>
                                    <h4> Update your restaurant informations <a href="updateRestaurantinfo" style="color: orange;"> Click Here </a> </h4>
                                <% } %>
                                <br>
                                <br>
                            </div> 

                        </div>
                        <!-- /.panel .chat-panel -->
                    </div>

                    <% include ./partials/admin_footer %>